/// This function calculates the factorial of a number using a while loop
/// instead of recursion to avoid stack overflow for large n and to test
/// the newly while loop implementation :)
int factorial(num: int) {
    if (num < 0) {
        return 0;
    }

    var acc := 1;
    var n := num;
    while (n > 0) {
        acc *= n;
        n -= 1;
    }
    return acc;
}

